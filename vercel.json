{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "pythonVersion": "3.10", "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PORT": "8000"
  },
  "ignoreCommand": "pip uninstall -y torch torchvision torchaudio || true"
}
